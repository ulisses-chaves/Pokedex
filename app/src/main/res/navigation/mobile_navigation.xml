    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.ufrpe.pokedex.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.ufrpe.pokedex.ui.type.TypeFragment"
        android:label="@string/title_type"
        tools:layout="@layout/fragment_type" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.ufrpe.pokedex.ui.weight.WeightFragment"
        android:label="@string/title_weight"
